<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/titlebar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FAFAFA"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#afafaf" />

    <RadioGroup
        android:id="@+id/defectlist_rg"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">

            <RadioButton
                android:id="@+id/defectlist_rb1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/defectlist_rediobutton_color"
                android:drawableBottom="@drawable/defectlist_rediobutton_bg_selector"
                android:checked="true"
                android:text="消息明细"/>

            <RadioButton
                android:id="@+id/defectlist_rb2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/defectlist_rediobutton_color"
                android:drawableBottom="@drawable/defectlist_rediobutton_bg_selector"
                android:text="充值明细"/>

        </LinearLayout>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#afafaf" />

    <FrameLayout
        android:id="@+id/defectlist_framlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

</LinearLayout>